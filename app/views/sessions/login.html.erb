<div id="login-page-container">
    <div id="login-form-container">
        <h2>Log In</h2>
        <%= form_tag '/login' do %>
            <%= text_field_tag :username, nil, :placeholder => "Username" %><br>
            <%= password_field_tag :password, nil, :placeholder => "Password" %><br>
            <%= submit_tag "Log In" %>
        <% end %>
    </div>
</div>